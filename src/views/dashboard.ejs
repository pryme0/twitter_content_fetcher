<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/fontawsome/css/all.css">
    <link rel="stylesheet" type="text/css" href="/fontawsome/css/brands.css">
    <link rel='stylesheet' type='text/css' media='screen' href='/css/main.css'>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
</head>

<body>

    <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Content Fetcher</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>

                <% if(user !== null){%>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <%=user.email %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">LogOut</a>
                    </li>
                    <%}%>
            </ul>
        </div>
    </nav>
    <div style="display:none" id="alertHolder" class="alert alert-warning alert-dismissible fade show" role="alert">
        <i id="alertMessage">You should check in on some of those fields below.</i>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="container-fluid">

        <div class="sidenav">
            <img style="border-radius:10px" class="img-rounded" src="<%= user.profileImage %>">
            <h4 style="padding: 10px;">
                <%= user.firstName %>
            </h4>
            <h4 style="padding: 10px;">
                <%= user.email %>
            </h4>
            <form name="interestForm">
                <div class="form-group">
                    <label for="formGroupExampleInput">Example label</label>
                    <input type="text" class="form-control" name="inputInterests" id="inputInterests" placeholder="Input interests seprated by comma">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" id="submitInterest" value="Update Interest">
                </div>
            </form>
            <br>
            <div>
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Edit Interest</button>


            </div>

        </div>

        <div id="main" class="main">
            <div id="alertHolder" class="alert alert-warning alert-dismissible fade show" role="alert" hidden>
                <i id="alertMessage">.</i>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="spinner-grow" style="width: 25rem; height: 25rem;" role="status">
                <span class="sr-only ">Loading...</span>
            </div>

        </div>


        <!-- Trigger the modal with a button -->

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div id="interests" class="modal-content">
                   <!-- < <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Interests </h4>
                    </div>> -->
                    <div id="deleteAlert" class="alert alert-warning alert-dismissible fade show" role="alert" hidden>
                        <i id="deleteMessage">.</i>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="modalBody" class="modal-body">
                       
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>



    </div>
    <script src="/js/jquery-3.4.1.js "></script>
    <script src="/fontawsome/js/fontawesome.min.js "></script>
    <script src="/js/bootstrap.min.js "></script>
    <script src="/js/main.js "></script>


</body>

</html>